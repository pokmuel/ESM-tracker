const SCRIPT_URL = "https://script.google.com/macros/s/AKfycbzSphpMR2Hjfq9d0q6H5BjSiMw1qIfC5LeGMIaQAGhqMPAVVVRyF1-kNML-ofp8Xe-1QA/exec"; // Replace with your own URL
function saveToSheet(data) {
  fetch(SCRIPT_URL, {
    method: 'POST',
    body: JSON.stringify(data),
    headers: {
      'Content-Type': 'application/json'
    }
  })
    .then(res => res.text())
    .then(response => {
      alert("Data saved to Google Sheet!");
      console.log(response);
    })
    .catch(error => {
      alert("Error saving data");
      console.error("Error:", error);
    });
}
function loadFromSheet() {
  fetch(SCRIPT_URL)
    .then(res => res.json())
    .then(data => {
      console.log("Data from Google Sheet:", data);
      alert("Check the browser console to see the loaded data!");
    })
    .catch(error => {
      alert("Error loading data");
      console.error("Error:", error);
    });
}
return (
  <div style={{ padding: 20 }}>
    <h1>ESM Tracker</h1>
    
    <button onClick={() => saveToSheet({
      name: "Project A",
      status: "Verified",
      amount: 5000
    })}>
      Save Sample Data
    </button>

    <br /><br />

    <button onClick={loadFromSheet}>
      Load Data from Google Sheet
    </button>
  </div>
);
